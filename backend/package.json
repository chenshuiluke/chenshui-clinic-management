{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "NODE_ENV=test DB_HOST=localhost npm run typecheck && NODE_OPTIONS='--import tsx --no-warnings' mocha --exit src/__tests__/setup.ts 'src/__tests__/**/*.test.ts'",
    "test:watch": "NODE_OPTIONS='--import tsx --no-warnings' mocha --watch --watch-files 'src/**/*.ts' --exit src/__tests__/setup.ts 'src/__tests__/**/*.test.ts'",
    "test:coverage": "nyc npm test",
    "drizzle:pull:central": "drizzle-kit pull --config=drizzle-pull.config.ts",
    "drizzle:generate:central": "drizzle-kit generate --config=drizzle.config.ts",
    "drizzle:migrate:central": "drizzle-kit migrate --config=drizzle.config.ts",
    "drizzle:studio:central": "drizzle-kit studio --config=drizzle.config.ts",
    "drizzle:pull:org": "tsx scripts/load-org-secrets.ts pull --config=drizzle-pull-org.config.ts",
    "drizzle:generate:org": "tsx scripts/load-org-secrets.ts generate --config=drizzle-org.config.ts",
    "drizzle:migrate:org": "tsx scripts/load-org-secrets.ts migrate --config=drizzle-org.config.ts",
    "drizzle:studio:org": "tsx scripts/load-org-secrets.ts studio --config=drizzle-org.config.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.913.0",
    "@aws-sdk/client-ses": "^3.928.0",
    "@aws-sdk/client-sqs": "^3.911.0",
    "@sendgrid/mail": "^8.1.6",
    "@types/pg-format": "^1.0.5",
    "aws-sdk-client-mock": "^4.1.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.28.1",
    "drizzle-orm": "^0.36.4",
    "drizzle-seed": "^0.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pg-format": "^1.0.4",
    "pg-hstore": "^2.3.4",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "sequelize": "^6.37.7",
    "tsx": "^4.19.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/chai": "^5.0.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.7.0",
    "@types/pg": "^8.15.5",
    "@types/sendgrid": "^2.0.31",
    "@types/supertest": "^6.0.2",
    "chai": "^5.1.2",
    "mocha": "^11.0.1",
    "nodemon": "^3.1.10",
    "nyc": "^15.1.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov",
      "json-summary"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/__tests__/**",
      "src/**/*.test.ts",
      "src/migrations/**",
      "src/seeders/**",
      "src/**/*.d.ts"
    ],
    "branches": 50,
    "lines": 50,
    "functions": 50,
    "statements": 50
  }
}
