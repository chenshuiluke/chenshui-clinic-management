{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
    "test": "mocha --require tsx/cjs src/__tests__/setup.ts 'src/__tests__/**/*.test.ts'",
    "test:watch": "mocha --require tsx/cjs --watch --watch-files 'src/**/*.ts' src/__tests__/setup.ts 'src/__tests__/**/*.test.ts'",
    "migration:create": "mikro-orm migration:create",
    "migration:up": "mikro-orm migration:up",
    "migration:down": "mikro-orm migration:down",
    "migration:list": "mikro-orm migration:list",
    "migration:pending": "mikro-orm migration:pending",
    "seeder:run": "mikro-orm seeder:run",
    "test:coverage": "nyc npm test"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.911.0",
    "@mikro-orm/cli": "^6.5.8",
    "@mikro-orm/core": "^6.5.8",
    "@mikro-orm/migrations": "^6.5.8",
    "@mikro-orm/postgresql": "^6.5.8",
    "@mikro-orm/reflection": "^6.5.8",
    "@mikro-orm/seeder": "^6.5.8",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.7.0",
    "@types/supertest": "^6.0.2",
    "chai": "^5.1.2",
    "mocha": "^11.0.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "nyc": "^15.1.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov",
      "json-summary"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/__tests__/**",
      "src/**/*.test.ts",
      "src/migrations/**",
      "src/seeders/**",
      "src/**/*.d.ts"
    ],
    "branches": 70,
    "lines": 80,
    "functions": 75,
    "statements": 80
  }
}
